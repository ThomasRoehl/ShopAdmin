<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="name"
        android:ems="10"
        android:id="@+id/id_username"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/id_email"
        android:layout_alignStart="@+id/id_email"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/id_email"
        android:text="email"
        android:layout_below="@+id/id_username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/id_password1"
        android:text="password"
        android:layout_below="@+id/id_password2"
        android:layout_alignLeft="@+id/id_password2"
        android:layout_alignStart="@+id/id_password2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/id_password2"
        android:text="password"
        android:layout_below="@+id/id_email"
        android:layout_alignLeft="@+id/id_email"
        android:layout_alignStart="@+id/id_email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/id_save"
        android:onClick="addButtonClicked"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/id_password1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
